{
  "name": "@problem-solving/hackerrank",
  "description": "A collection of problem-solving algorithms and data structures implemented in TypeScript / Javascript, designed for HackerRank challenges.",
  "keywords": [
    "problem-solving",
    "algorithms",
    "data-structures",
    "typescript",
    "hackerrank"
  ],
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "lint": "eslint \"src/**/*.{ts,md}\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.{ts,md}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^5.5.0",
    "typescript-eslint": "^7.0.0"
  }
}
